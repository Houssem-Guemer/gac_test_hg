{% extends 'base.html.twig' %}

{% block title %} Tableau de Bord {% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            var element_ht = document.getElementById("categories_chart_HT");
            var element_ttc = document.getElementById("categories_chart_TTC");
            var borderColor = KTUtil.getCssVariableValue('--bs-border-dashed-color');

            var options_ht = {
                tooltip: {
                    x: {
                        show: false
                    },
                    y: {
                        formatter: function(value) {
                            return value + ' €';
                        }
                    }
                },
                series: [{
                    name: 'HT',
                    data: [
                        {% if sumHtByCategory is not empty %}
                            {{ sumHtByCategory[0][1] }},
                            {{ sumHtByCategory[1][1] }},
                            {{ sumHtByCategory[2][1] }},
                            {{ sumHtByCategory[3][1] }},
                            {{ sumHtByCategory[4][1] }}
                        {% else %}
                            0,
                            0,
                            0,
                            0,
                            0
                        {% endif %}
                    ],
                    show: false,
                }],
                chart: {
                    toolbar: {
                        show: true,
                        offsetX: 0,
                        offsetY: 0,
                        tools: {
                            download: true,
                            selection: true,
                            zoom: true,
                            zoomin: true,
                            zoomout: true,
                            pan: true,
                            reset: true,
                            customIcons: []
                        },
                        export: {
                            csv: {
                                filename: undefined,
                                columnDelimiter: ',',
                                headerCategory: 'category',
                                headerValue: 'value',
                                dateFormatter(timestamp) {
                                    return new Date(timestamp).toDateString()
                                }
                            },
                            svg: {
                                filename: undefined,
                            },
                            png: {
                                filename: undefined,
                            }
                        },
                        autoSelected: 'zoom'
                    },
                    zoom: {
                        enabled: true,
                        type: 'x',
                        autoScaleYaxis: false,
                        zoomedArea: {
                            fill: {
                                color: '#90CAF9',
                                opacity: 0.4
                            },
                            stroke: {
                                color: '#0D47A1',
                                opacity: 0.4,
                                width: 1
                            }
                        }
                    },
                    type: 'bar',
                    height: 250,
                },
                plotOptions: {
                    bar: {
                        borderRadius: 4,
                        horizontal: true,
                        distributed: true,
                        barHeight: 23
                    }
                },
                dataLabels: {
                    enabled: false
                },
                legend: {
                    show: false
                },
                colors: ['#3E97FF', '#F1416C', '#50CD89', '#FFC700', '#7239EA'],
                xaxis: {
                    categories: ['gasoline', 'diesel', 'electricity charge', 'gpl', 'hydrogen'],
                    labels: {
                        formatter: function (val) {
                            {% if sumHtByCategory is not empty %}
                                return val/1000000 + 'M €'
                            {% else %}
                                return val + ' €'
                            {% endif %}

                        },
                        style: {
                            colors: KTUtil.getCssVariableValue('--bs-gray-400'),
                            fontSize: '14px',
                            fontWeight: '600',
                            align: 'left'
                        }
                    },
                    axisBorder: {
                        show: false
                    }
                },
                yaxis: {
                    labels: {
                        style: {
                            colors: KTUtil.getCssVariableValue('--bs-gray-800'),
                            fontSize: '14px',
                            fontWeight: '600'
                        },
                        offsetY: 2,
                        align: 'left'
                    }
                },
                grid: {
                    borderColor: borderColor,
                    xaxis: {
                        lines: {
                            show: true
                        }
                    },
                    yaxis: {
                        lines: {
                            show: true
                        }
                    },
                    strokeDashArray: 4
                }
            };

            var options_ttc = {
                tooltip: {
                    x: {
                        show: false
                    },
                    y: {
                        formatter: function(value) {
                            return value + ' €';
                        }
                    }
                },
                series: [{
                    name: 'TTC',
                    data: [
                        {% if sumTtcByCategory is not empty %}
                            {{ sumTtcByCategory[0][1] }},
                            {{ sumTtcByCategory[1][1] }},
                            {{ sumTtcByCategory[2][1] }},
                            {{ sumTtcByCategory[3][1] }},
                            {{ sumTtcByCategory[4][1] }}
                        {% else %}
                            0,
                            0,
                            0,
                            0,
                            0
                        {% endif %}
                    ],
                    show: false
                }],
                chart: {
                    toolbar: {
                        show: true,
                        offsetX: 0,
                        offsetY: 0,
                        tools: {
                            download: true,
                            selection: true,
                            zoom: true,
                            zoomin: true,
                            zoomout: true,
                            pan: true,
                            reset: true,
                            customIcons: []
                        },
                        export: {
                            csv: {
                                filename: undefined,
                                columnDelimiter: ',',
                                headerCategory: 'category',
                                headerValue: 'value',
                                dateFormatter(timestamp) {
                                    return new Date(timestamp).toDateString()
                                }
                            },
                            svg: {
                                filename: undefined,
                            },
                            png: {
                                filename: undefined,
                            }
                        },
                        autoSelected: 'zoom'
                    },
                    zoom: {
                        enabled: true,
                        type: 'x',
                        autoScaleYaxis: false,
                        zoomedArea: {
                            fill: {
                                color: '#90CAF9',
                                opacity: 0.4
                            },
                            stroke: {
                                color: '#0D47A1',
                                opacity: 0.4,
                                width: 1
                            }
                        }
                    },
                    type: 'bar',
                    height: 250,
                },
                plotOptions: {
                    bar: {
                        borderRadius: 4,
                        horizontal: true,
                        distributed: true,
                        barHeight: 23
                    }
                },
                dataLabels: {
                    enabled: false
                },
                legend: {
                    show: false
                },
                colors: ['#3E97FF', '#F1416C', '#50CD89', '#FFC700', '#7239EA'],
                xaxis: {
                    categories: ['gasoline', 'diesel', 'electricity charge', 'gpl', 'hydrogen'],
                    labels: {
                        formatter: function (val) {
                            {% if sumTtcByCategory is not empty %}
                                return val/1000000 + 'M €'
                            {% else %}
                                return val + ' €'
                            {% endif %}
                        },
                        style: {
                            colors: KTUtil.getCssVariableValue('--bs-gray-400'),
                            fontSize: '14px',
                            fontWeight: '600',
                            align: 'left'
                        }
                    },
                    axisBorder: {
                        show: false
                    }
                },
                yaxis: {
                    labels: {
                        style: {
                            colors: KTUtil.getCssVariableValue('--bs-gray-800'),
                            fontSize: '14px',
                            fontWeight: '600'
                        },
                        offsetY: 2,
                        align: 'left'
                    }
                },
                grid: {
                    borderColor: borderColor,
                    xaxis: {
                        lines: {
                            show: true
                        }
                    },
                    yaxis: {
                        lines: {
                            show: true
                        }
                    },
                    strokeDashArray: 4
                }
            };

            var chart_ht = new ApexCharts(element_ht, options_ht);
            var chart_ttc = new ApexCharts(element_ttc, options_ttc);

            setTimeout(function() {
                chart_ht.render();
                chart_ttc.render();
            }, 200);
        });
    </script>
{% endblock %}

